<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

	    <TextView
    	    android:id="@+id/happybirthdayanimation"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/happybirthdayvalentine" />
	    
	    <ImageView
	        android:id="@+id/happyvalentinesday"
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:gravity="center"
	        android:layout_weight="2"
	        android:adjustViewBounds="true"
	        android:contentDescription="@string/happyvalentinesday"
	        android:src="@drawable/valentinebirthday" />
    
    	<ImageView
        	android:visibility="visible"
        	android:id="@+id/peterandsophie_newyears"
        	android:layout_width="wrap_content"
        	android:layout_height="0dp"
        	android:layout_gravity="center"
        	android:layout_weight="5"
        	android:adjustViewBounds="true"
        	android:contentDescription="@string/peterandsophie"
        	android:onClick="animatePeterAndSophie"
        	android:src="@drawable/peter_and_sophie_newyearseve_2013into2014" />
    	
    	<EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:layout_weight="2"
            android:hint="@string/your_email_address"
            android:inputType="textEmailAddress" />
    	
    	<Button
        	android:id="@+id/emailbutton"
        	android:layout_width="wrap_content"
        	android:layout_height="0dp"
        	android:onClick="sendValentineBirthdayEmail"
        	android:layout_weight="2"
        	android:text="@string/clicktosendemail" />
    	
    	<TextView
        	android:id="@+id/happybirthdayvalentine"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/clicktoplayhappybirthdayvideo" />
    
    	<ImageView
    	    android:id="@+id/peterwithsaxophone"
    	    android:layout_width="wrap_content"
    	    android:layout_height="502dp"
    	    android:layout_gravity="center"
    	    android:adjustViewBounds="true"
    	    android:contentDescription="@string/peterandsophie"
    	    android:src="@drawable/peter_with_saxophone_winterbandconcert_jan_30_2014"
    	    android:visibility="visible" />

     </LinearLayout>

</ScrollView>   
